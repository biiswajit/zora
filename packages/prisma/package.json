{
    "name": "@zora/prisma",
    "version": "0.0.0",
    "description": "",
    "main": "index.js",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "types": "./src/index.ts"
        }
    },
    "prisma": {
        "schema": "./models"
    },
    "scripts": {
        "format:check": "pnpm exec prisma format --check",
        "format:fix": "pnpm exec prisma format",
        "generate": "pnpm exec prisma generate",
        "generate:watch": "pnpm exec prisma generate --watch",
        "push": "pnpm exec prisma db push",
        "push:hard": "pnpm exec prisma db push --force-reset",
        "migrate": "pnpm exec prisma migrate dev",
        "reset": "pnpm exec prisma migrate reset",
        "dev": "pnpm exec prisma studio --port 5555 --browser none",
        "build": "pnpm generate && tsc"
    },
    "dependencies": {
        "@prisma/client": "^6.16.2",
        "dotenv": "^17.2.2"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "@zora/typescript-config": "workspace:*",
        "prisma": "^6.16.2",
        "typescript": "5.9.2"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
