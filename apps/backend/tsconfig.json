{
    "extends": "@zora/typescript-config/base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/config/*": ["./src/config/*"],
            "@/router": ["./src/routes/index.ts"],
            "@/utils/*": ["./src/utils/*"],
            "@/middlewares/*": ["./src/middlewares/*"],
            "@/controllers/*": ["./src/controllers/*"],
            "@/services/*": ["./src/services/*"],
            "@/types/*": ["./src/types/*"],
            "@/errors/*": ["./src/errors/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
