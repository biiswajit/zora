{
    "extends": "@zora/typescript-config/base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@environment": ["./src/config/environment.ts"],
            "@logger": ["./src/config/logger.ts"],
            "@morgan": ["./src/config/morgan.ts"],
            "@router": ["./src/routes/index.ts"],
            "@utils/*": ["./src/utils/*"],
            "@middlewares/*": ["./src/middlewares/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
